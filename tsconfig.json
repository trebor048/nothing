{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "ES5"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/plugin.js"
  ],
  "outDir": "dist"
}
